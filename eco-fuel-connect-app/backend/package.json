{
  "name": "ecofuelconnect-backend",
  "version": "1.0.0",
  "description": "EcoFuelConnect Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "keep-alive": "node keep-alive.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --verbose",
    "test:unit": "jest tests/unit.test.js",
    "test:quick": "node tests/quick-check.js",
    "test:integration": "node tests/comprehensive.test.js",
    "test:performance": "node tests/performance.test.js",
    "test:security": "node tests/security.test.js",
    "test:summary": "node tests/summary-report.js",
    "test:all": "npm run test:integration && npm run test:performance && npm run test:security"
  },
  "keywords": ["biogas", "waste-management", "sustainability"],
  "author": "EcoFuelConnect Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "sequelize": "^6.31.0",
    "mysql2": "^3.2.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "axios": "^1.4.0",
    "socket.io": "^4.6.1",
    "google-auth-library": "^8.8.0",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "@huggingface/inference": "^2.6.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "collectCoverageFrom": ["**/*.js", "!tests/**", "!coverage/**", "!node_modules/**"]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
